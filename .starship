add_newline = false
scan_timeout = 30
command_timeout = 10000 # 重すぎることがあるので適宜調整
format = """\
    $username\
    $hostname\
    $directory\
    $git_branch\
    $git_commit\
    $git_state\
    $git_status\
    $hg_branch\
    $env_var\
    $docker_context\
    $kubernetes\
    $aws\
    $gcloud\
    $package\
    $dotnet\
    $elixir\
    $elm\
    $erlang\
    $golang\
    $java\
    $julia\
    $nodejs\
    $ocaml\
    $php\
    $purescript\
    $python\
    $ruby\
    $rust\
    $terraform\
    $zig\
    $nix_shell\
    $conda\
    $memory_usage\
    $crystal\
    $cmd_duration\
    $custom\
    $line_break\
    $jobs\
    $battery\
    $time\
    $character\
"""

[character]
success_symbol = "[ ::](#eeef20)"
error_symbol = "[ ERROR⚡️](#ff5859)"
vicmd_symbol = "[ ::](#55FF55)"

[hostname]
ssh_only = true
disabled = false
style = "#ffff3f"

[directory]
truncation_length = 3
truncate_to_repo = false
style = "#e4ff1a"

[time]
disabled = false
format = "[$time]($style)"
time_format = "%T"
utc_time_offset = "+9"
style = "#adb5bd"

[gcloud]
symbol = '️🇬️ '
format = 'on [$symbol$account(@$domain)(\($region\))(\($project\))]($style) '
style = 'bold #4285F4'
detect_env_vars = ['GOOGLE_APPLICATION_CREDENTIALS']
[gcloud.region_aliases]
us-central1 = 'uc1'
asia-northeast1 = 'an1'

[aws]
symbol = "☁️ "
style = "#FF9900"
[aws.region_aliases]
ap-northeast-1 = "tokyo"
ap-northeast-3 = "osaka"
us-east-1 = "va"
us-east-2 = "oh"
us-west-1 = "ca"
us-west-2 = "or"
#[aws.profile_aliases]
#'sandbox' = 'sandbox'

[docker_context]
symbol = "🐋 "

[git_branch]
symbol = "🚀 "
#truncation_length = 2
#truncation_symbol = ""
#style = "#F7819F"

[git_state]
format = '[\($state( $progress_current of $progress_total)\)]($style) '
cherry_pick = "[PICKING](bold red)"

[git_status]
ignore_submodules = true
ahead = ""
behind = ""
diverged = ""
conflicted = ""
untracked = ""
stashed = ""
modified = ""
staged.value = "++"
renamed = ""
deleted = ""

[golang]
#symbol = "🏎💨 "
style = "#7fd5ea"

[kubernetes]
symbol = "🥑 "
style = "#ffd31d"
disabled = false
format = '[$symbol$context( \($namespace\))]($style) in '
detect_extensions = []
detect_files = ['k8s', 'Dockerfile', 'docker-compose.yml', 'docker-compose.yaml', 'helmfile.yaml', 'helmfile.yml']
detect_folders = ['k8s', 'helm', 'kubernetes', '.kube']
[kubernetes.context_aliases]
"dev.local.cluster.k8s" = "dev"

[nodejs]
symbol = "🤖 "

[python]
# symbol = "👾 "
pyenv_version_name = true
pyenv_prefix = "foo "

[ruby]
symbol = "🔺 "

[terraform]
#symbol = "🏎💨 "
#show_version = true

[battery]
disabled = true

[conda]
disabled = true

[crystal]
disabled = true

[dotnet]
disabled = true

[elixir]
disabled = true

[elm]
disabled = true

[erlang]
disabled = true

[java]
disabled = true

[julia]
disabled = true

[hg_branch]
disabled = true

[nix_shell]
disabled = true

[ocaml]
disabled = true

[php]
disabled = true

[rust]
disabled = true

[singularity]
disabled = true

[zig]
disabled = true

[purescript]
disabled = true

