{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "model": "anthropic/claude-sonnet-4-5",
  "keybinds": {
    "input_submit": "super+return",
    "input_newline": "return,shift+return,alt+return,ctrl+j",
    "input_backspace": "backspace,shift+backspace,ctrl+h"
  },
  "permission": {
    "webfetch": "allow",
    "edit": "ask",
    "bash": "ask"
  },
  "agent": {
    "reviewer": {
      "description": "Code review agent with read-only permissions for analyzing code quality",
      "model": "anthropic/claude-sonnet-4-5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  }
}
